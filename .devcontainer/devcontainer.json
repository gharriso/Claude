{
  "name": "Connections Game",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:20",
  "forwardPorts": [8080],
  "portsAttributes": {
    "8080": {
      "label": "Connections Game",
      "onAutoForward": "openBrowser"
    }
  },
  "postStartCommand": "npx --yes serve . -p 8080",
  "customizations": {
    "vscode": {
      "extensions": ["ritwickdey.LiveServer"]
    }
  }
}
